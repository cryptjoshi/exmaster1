# Development Dockerfile for Golang with Air
FROM golang:1.21-alpine

# Install Air for live reloading
RUN go install github.com/cosmtrek/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8088

# Run Air for live reloading
CMD ["air", "-c", ".air.toml"]
