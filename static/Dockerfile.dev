# Development Dockerfile for Next.js
FROM node:18-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json ./
# Install dependencies (will create pnpm-lock.yaml if not exists)
RUN pnpm install --no-frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Run Next.js in development mode
CMD ["pnpm", "run", "dev"]
